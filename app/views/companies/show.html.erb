<p id="notice"><%= notice %></p>

<h2><%= @company.name %></h2>

<div class="map-container">
  <script type="text/javascript">
    window.companyAddresses = <%= raw @company.addresses.to_json %>;
  </script>

  <div id="map"></div>
</div>

<p>
  <strong>People:</strong>
  <ul>
  <% @company.people.each do |person| %>
    <li><%= link_to person.full_name, person_path(person.id) %></li> 
  <% end %>
  </ul>
</p>

<p>
  <strong>Phone numbers:</strong>
  <% @company.phone_numbers.each do |phone_number| %>
  <%= phone_number.number %>
  <% end %>
</p>

<p>
  <strong>Email addresses:</strong>
  <% @company.emails.each do |email| %>
  <%= email.email %>
  <% end %>
</p>

<p>
  <strong>Addresses:</strong>
  <% @company.addresses.each do |address| %>
  <%= address.address_1 %>
  <%= address.address_2 %>
  <%= address.city %>,
  <%= address.state %>
  <%= address.zip_code %>
  <% end %>
</p>

<p>
  <strong>Notes:</strong>
  <% @company.notes.each do |note| %>
  <%=  note.created_at.strftime("%m/%d") %> :
  <%= note.body%>
  <hr>
  <% end %>
</p>

<br>
<%= link_to fa_icon('pencil', text: 'Edit'), edit_company_path(@company), class: 'btn btn-sm btn-default' %>
<%= link_to fa_icon('chevron-left', text: 'Back'), companies_path, class: 'btn btn-sm btn-default' %>
