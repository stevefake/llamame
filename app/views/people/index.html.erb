<% content_for(:sidebar) do %>
  <%= link_to 'New Person', new_person_path, class: "btn btn-success btn-block"%>
<% end %>

<h1>
  <%= fa_icon(:user) %>
  People
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render @people %>
  </tbody>
</table>

<footer>
    <%= paginate @people %>
</footer>
